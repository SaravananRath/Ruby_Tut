<style type="text/css">
  table,tr,th,td{
    border: 1px solid black;
    border-collapse: collapse;
  }
</style>
<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
  <%= link_to 'New Form', new_article_path%>
</table>